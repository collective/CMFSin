<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- The a sin box row -->
    <div metal:define-macro="sinBox" tal:on-error="string:"
      		tal:define="default_max python: 10;
                  true python: 1;
                  false python: 0;
                  verbose verbose | false;
                  max max_size | default_max;
                  sin here/sin_tool;
                  map options/map | request/map | here/sin_tool/getCurrentFeed;
                  rows python:sin.sin(map, max_size=max)">


	<div class="portlet">
	<div class="padding">
	  
	<h5 tal:content="map">mapname</h5>
	  <div class="portletBody">
	    <div tal:repeat="row rows">
	      <div class="portletContent"
		tal:define="oddrow repeat/row/odd"
		tal:attributes="class python:test(oddrow, 'portletContent even', 'portletContent odd')">
			<a href="#"  tal:attributes="href row/link" tal:content="structure row/title"/>&nbsp;
			<span tal:condition="python: row.get('date') or nothing" 
                tal:content="python: here.toLocalizedTime(row['date'])" /><br/>
			<span tal:condition="python: verbose and row.get('description') or nothing" 
                tal:replace="structure row/description" />
	      </div>
	    </div>
<div class="portletDetails">
[<a tal:attributes="href  python:'sinList?synmap=%s' % map" i18n:translate="see_more">see more</a>]
</div>
	  </div>
        </div>
      </div>
    </div>
</body>
</html>
